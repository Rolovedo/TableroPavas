{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/app.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/app.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/client/build/images/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/build/assets/$1"
    },
    {
      "src": "/(favicon\\.ico|manifest\\.json|robots\\.txt)",
      "dest": "/client/build/$1"
    },
    {
      "src": "/",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "FORCE_UPDATE": "true",
    "NODE_OPTIONS": "--openssl-legacy-provider"
  },
  "regions": ["iad1"]
}
